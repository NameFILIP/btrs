<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE datasources
    PUBLIC "-//JBoss//DTD JBOSS JCA Config 1.5//EN"
    "http://www.jboss.org/j2ee/dtd/jboss-ds_1_5.dtd">
<datasources>
   
	<xa-datasource>
		<jndi-name>btrsDatasource</jndi-name>
		<use-java-context>false</use-java-context>
		<track-connection-by-tx />
		<xa-datasource-class>org.postgresql.xa.PGXADataSource</xa-datasource-class>
		<xa-datasource-property name="ServerName">localhost</xa-datasource-property>
		<xa-datasource-property name="PortNumber">5432</xa-datasource-property>
		<xa-datasource-property name="DatabaseName">_btrs</xa-datasource-property>
		<xa-datasource-property name="User">postgres</xa-datasource-property>
		<xa-datasource-property name="Password">postgres</xa-datasource-property>
	</xa-datasource>
	
	<xa-datasource>
		<jndi-name>userDatasource</jndi-name>
		<use-java-context>false</use-java-context>
		<track-connection-by-tx />
		<xa-datasource-class>org.postgresql.xa.PGXADataSource</xa-datasource-class>
		<xa-datasource-property name="ServerName">localhost</xa-datasource-property>
		<xa-datasource-property name="PortNumber">5432</xa-datasource-property>
		<xa-datasource-property name="DatabaseName">user_db</xa-datasource-property>
		<xa-datasource-property name="User">postgres</xa-datasource-property>
		<xa-datasource-property name="Password">postgres</xa-datasource-property>
	</xa-datasource>

</datasources>
