<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages 
      					  http://jboss.com/products/seam/pages-2.2.xsd"
	  no-conversation-view-id="/expense-type-list.xhtml"
      login-required="true">
	
	<restrict>#{s:hasRole('ADMIN')}</restrict>
	
	<begin-conversation join="true" flush-mode="MANUAL"/>

	<param name="expenseTypeId" value="#{expenseTypeHome.expenseTypeId}"/>

	<action execute="#{expenseTypeHome.wire}"/>

	<navigation from-action="#{expenseTypeHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/expense-type-list.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{expenseTypeHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/expense-type-list.xhtml"/>
      </rule>
   </navigation>

</page>
