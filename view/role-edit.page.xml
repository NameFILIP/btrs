<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages 
      					  http://jboss.com/products/seam/pages-2.2.xsd"
	  no-conversation-view-id="/role-list.xhtml"
      login-required="true">

	<restrict>#{s:hasRole('ADMIN')}</restrict>

	<begin-conversation join="true" flush-mode="MANUAL"/>

	<param name="roleId" value="#{roleHome.roleId}"/>

	<action execute="#{roleHome.wire}"/>

	<navigation from-action="#{roleHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/role-list.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{roleHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/role-list.xhtml"/>
      </rule>
   </navigation>

</page>
